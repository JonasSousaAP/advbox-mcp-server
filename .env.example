# Advbox MCP Server Environment Variables
# Copy this file to .env and fill in your values

# Advbox API Token (Required)
# Get from: Advbox > Configuracoes > API > Token
ADVBOX_API_TOKEN=your_advbox_token_here

# Advbox API Base URL (Optional - defaults to production)
ADVBOX_BASE_URL=https://app.advbox.com.br/api/v1

# MCP Server Authentication Token (Required)
# Generate with: openssl rand -hex 32
MCP_TOKEN=your_mcp_token_here

# Public URL for SSE endpoint (Required for production)
# This is the URL clients will use to connect
MCP_PUBLIC_URL=https://your-domain.com

# Allowed CORS Origins (Optional - defaults to *)
# Comma-separated list of allowed domains
ALLOWED_ORIGINS=https://your-domain.com

# Server Port (Optional - defaults to 3000)
PORT=3000
